<% form_url = @retro.new_record? ? "/retros" : retro_path(@retro.slug) %>
<%= form_for @retro, url: form_url, html: { id: 'retro-form', class: 'form', role: 'form' } do |f| %>
  <% if @retro.errors.any? %>
    <h2><%= pluralize(@retro.errors.count, "error") %> prohibited this retro from being saved:</h2>

    <ul class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <% @retro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-xs-8">
      <div class="form-group">
        <%= f.label :name do %>
          Name
          <b class="required">*</b>
        <% end %>
        <%= f.text_field :name, placeholder: "Room name", class: "form-control", required: true%>
      </div>
      <div class="form-group">
        <%= f.label "Schemes" %>
        <%= hidden_field_tag "retro[scheme_uid]" %>
        <%= render partial: "retros/schemes", locals: { retro: @retro } %>
      </div>
    </div>
  </div>
  <div class="actions form-group">
    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>
