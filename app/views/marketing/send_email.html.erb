<%
    title "Send mails"
%>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">Send email</div>
      <div class="panel-body">
        <%= form_tag marketing_send_email_path, method: "POST" do %>
          <div class="form-group">
            <label for="receivers">Reveivers</label>
            <%= text_area_tag :receivers, nil, placeholder: "Separated by comma", class: "form-control", rows: 3 %>
          </div>
          <div class="form-group">
            <label for="content">Content</label>
            <%= text_area_tag :content, nil, class: "form-control", rows: 20 %>
          </div>
          <button type="submit" class="btn btn-info">Send</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
