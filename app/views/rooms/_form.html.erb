<%= form_for @room, html: { class: 'form', role: 'form' } do |f| %>
  <% if @room.errors.any? %>
    <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

    <ul class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <ul class="list-inline point-values">
      <li><input class="btn btn-default btn-lg" type="button" value="0"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="1"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="2"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="3"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="5"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="8"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="13"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="20"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="40"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="100"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="?"></li>
      <li><input class="btn btn-default btn-lg" type="button" value="coffee"></li>
    </ul>
  </div>
  <section class="stories-section panel panel-primary" id="story-section">
    <div class="panel-heading">
      Stories
      <a class="pull-right import" href="javascript:;" data-status="input">
        <i class="fa fa-list" aria-hidden="true"></i>
        Import from list?
      </a>
    </div>
    <div class="panel-body" id="story-row">
      <%= render partial: 'rooms/story_form', locals: { f: f } %>
      <% if @room.new_record? %>
        <div class="row bulk-links" style="display: none;">
          <%= hidden_field_tag :bulk %>
          <%= text_area_tag :bulk_links, nil, class: 'form-control col-xs-10' %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <button type="button" class="add btn btn-info">
        <i class="fa fa-plus"></i>
      </button>
    </div>
  </section>
  <div class="actions form-group">
    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>

<script type="text/javascript">
$(document).on('ready page:load', function(event) {
  $('.stories-section').nestedFields({
    containerSelector: '#story-row',
    itemSelector: '#story-row .row',
    afterInsert: function(item, e) {
      console.log(item + ' was added.');
    }
  });
});
</script>