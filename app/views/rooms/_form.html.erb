<%= form_for @room, html: { class: 'form', role: 'form' } do |f| %>
  <% if @room.errors.any? %>
    <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

    <ul class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= render partial: 'rooms/story_form', locals: { f: f } %>
  <button type="button" class="add btn btn-primary">New One</button>
  <div class="actions form-group">
    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>
