<dl>
  <a class="room-list-item" href="<%= room_path(room.slug) %>", , target="_blank">
    <dt><h4 class="room-list-item-heading"><%= room.name %></h4></dt>
    <dd class="room-list-item-text">
      <span>
        <% cache ["user_count", room] do %>
          <%= room.users.count %>
        <% end %>
        participants
      </span>
      <span class="divider">·</span>
      <span>
        <% cache ["story_count", room] do %>
          <%= room.stories.count %>
        <% end %>
        stories
      </span>
      <span class="divider">·</span>
      <span data-toggle="tooltip" data-placement="top" title="<%= l(room.created_at, format: :short) %>"><%= distance_of_time_in_words_to_now(room.created_at) %> ago</span>
      <% if room.time_duration.present? %>
        <span class="divider">·</span>
        <span>Took <%= distance_of_time_in_words(room.time_duration) %></span>
      <% end %>
    </dd>
    <span class="status label <%= state_class(room) %> pull-right"><%= room.display_state %></span>
  </a>
</dl>