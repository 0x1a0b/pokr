<% content_for :inline_style do %>
  .btn-pokrex-join {
    display: inline-block;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
    color: #fff;
    background-color: #5bc0de;
    border-color: #46b8da;
    text-decoration: none;
    padding: 6px 30px;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .pokrex-invitation table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }

  .pokrex-invitation td {
    border-left: solid 10px #000;
    padding: 0;
    margin: 0;
    width: 0px;
    height: 10px;
  }

  .pokrex-invitation td.black { border-color: #000; }
  .pokrex-invitation td.white { border-color: #fff; }
<% end %>
<h1>Join <%= @room_name %> on Pokrex</h1>
<div class="pokrex-invitation">
  <%= @from_name %> (<%= @from_email %>) has invited you to join the Pokrex room <b><%= @room_name %></b>. Join now to start poker!<br>
  <%= link_to "Join Now", room_url(@room_slug), target: "_blank", class: "btn-pokrex-join" %>
  <p>Or</p>
  <div>
    <%= RQRCode::QRCode.new(room_url(@room_slug)).as_html.html_safe %>
  </div>
</div><hr>
<div>
  <div style="float:left;"><img src="https://pokrex.com/apple-icon-120x120.png" width="50" height="50" /></div>
  <div><a href="https://pokrex.com" target="_blank" style="line-height:50px;">Pokrex</a></div>
</div>
