<%
  title "Profile"
%>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">Personal Information</div>
      <div class="panel-body">
        <%= form_for @user, url: {action: :update}, html: { class: 'form', role: 'form' } do |f| %>
          <% if @user.errors.any? %>
            <h5><%= pluralize(@user.errors.count, "error") %> prohibited your profile from being saved:</h5>

            <ul class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group user--avatar">
            <%= f.label :avatar %>
            <%= image_tag @user.avatar.url(:medium)%>
            <div class="btn btn-default avatar--file">
              <%= f.file_field :avatar %>
              选择图片
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control', disabled: true %>
          </div>
          <div class="actions form-group">
            <%= f.submit "Update", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Edit Password</div>
      <div class="panel-body">
        <%= form_for @user, url: {action: :update_password}, html: { class: 'form', role: 'form' } do |f| %>
          <% if @user.errors.any? %>
            <h5><%= pluralize(@user.errors.count, "error") %> prohibited your profile from being saved:</h5>

            <ul class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

           <div class="form-group">
            <%= f.label :current_password, "Current password" %><br />
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Change my password", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>